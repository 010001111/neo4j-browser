@import 'nib'
@import 'variables'

.graph-viz {
  float: left;
  width: 500px;
}

path.link {
  fill: none;
  stroke: #7F8C8D;
  stroke-width: 2px;
}

text {
  font-family: sans-serif;
  pointer-events: none;
}

marker
  fill: #D8DADC

text
  .faded
    fill: #333

.node
  .ring
    fill: none
    opacity: 0
    stroke: yellow
  &.selected
    .ring
      stroke: #6AC6FF
  &.selected:hover
    .ring
      stroke: yellow
  &:hover, &.selected
    .ring
      opacity: .3

.relationship
  .overlay
    opacity: 0
    fill: yellow
   &.selected
    .overlay
      fill: #6AC6FF
  &.selected:hover
    .overlay
      fill: yellow
  &:hover, &.selected
    .overlay
      opacity: .3

.outline, .ring
  cursor: pointer
