@import 'variables'
@import 'nib'
@import 'mixins'

palette-a = #212E32
palette-b = #555C57
palette-c = #8C9387
palette-d = #ACAF9D
palette-e = #DEDDC8
palette-f = #FFFFFF
palette-g = #D2D2D2
palette-h = #333333
palette-i = #000000

swatch-a-background-color = palette-a
swatch-a-text-color = palette-e
swatch-b-background-color = palette-b
swatch-b-text-color = palette-f
swatch-c-background-color = palette-c
swatch-c-text-color = palette-b
swatch-c-background-hover = palette-d
swatch-c-text-hover = palette-b
swatch-d-background-color = palette-e
swatch-d-text-color = palette-f
swatch-d-border-color = palette-c
swatch-e-background-color = palette-f
swatch-e-text-color = palette-i
swatch-e-border-color = palette-h

color-link = swatch-a-text-color
color-link-hover = swatch-c-text-hover
code-text-color = swatch-e-text-color
code-background-color = swatch-e-background-color
drawer-color-fg = swatch-b-text-color
drawer-color-bg = swatch-b-background-color
navbar-color-bg = swatch-a-background-color
navbar-color-fg = swatch-a-text-color
navbar-color-bg-active = drawer-color-bg
frame-background-color = swatch-e-background-color
frame-text-color = swatch-e-text-color
editor-background-color = swatch-e-background-color
editor-text-color = swatch-e-text-color
editor-border-color = swatch-e-border-color

body.theme-presentation
  font: 13px 'Helvetica Neue', Helvetica, Arial, sans-serif
  background: swatch-e-background-color
  color: swatch-e-text-color

  a
    color: color-link
    &:hover
      color: color-link-hover
      text-decoration: none


  #incompatible
    background-color: #fff

  .table > tbody
    background-color: swatch-d-background-color
    color: swatch-d-text-color
    tr
      th, td
        border-color: swatch-d-border-color

  table.json-object
    background-color: #eee;
    tbody
      tr
        background-color: transparent;
        td, th
          color: #666;

  .status-bar-wrapper
    display: none
  .status-bar
    color: swatch-d-text-color
    background-color: frame-background-color
    border-color: swatch-d-border-color

    .status

    .popover.bottom
      .arrow:after
        border-bottom-color: #f7f7f7
    .details
      margin-top: -4px
      margin-left: 12px
    .updated-code
      float:right
      margin-right horizontal-padding
    &.error
      color: color-error
    .fa-ok
      color: color-success

  .fullscreen-container
    background-color: swatch-b-background-color
    .code-bar
      // darkened
      background-color: swatch-b-background-color
      .actions
        display: none
      a.close-fullscreen
        color: #9B9DA2
    a.fa-download
      color: #9B9DA2
    .result
      background-color: #F8F9FB

  .key.code
    color: #eee

  //
  // Bootstrap overrides
  //////////////////////

  .navbar-inverse .navbar-inner
    background: linear-gradient(top, #333, #181818)

  .navbar .brand
    color: #fff

  /////
  .bg-warning
    background-color: #635c36

  #error
    background-color: color-error
    color: #fff
  .connection-error
    #error
      display: block

  #stream
    .frame
      .view-result
        .view-result-graph, .view-result-table, article.help p, article.guide p
          background-color: frame-background-color
          color: frame-text-color


      .code-bar
        .code
          color: swatch-b-text-color
        background-color: swatch-b-background-color

      .inner .view-result .view-result-table .table-holder, table.data tbody tr
        background-color: inherit

  #main
    background-color: swatch-d-background-color

    code
      color: code-text-color
      background-color: code-background-color

    .admin, .view-result
      [exec-topic], [help-topic], [play-topic]
        color: code-text-color
        background-color: code-background-color

    .hero-unit
      background-color: swatch-c-background-color

    article.guide, article.help, article.guide, pre, article.admin
      color: frame-text-color
      background-color: frame-background-color
      // p
      //   color: swatch-b-text-color
      pre.code
        color: swatch-c-text-color
        background-color: swatch-c-background-color
        &:hover
          background-color: swatch-c-background-hover
          color: swatch-c-text-hover

    .intro
      background: url(../images/intro.png) 50% 48% no-repeat

    .view-editor
      background-color: editor-border-color
      z-index: -1

    footer
      color: #A0AAB1


  #nav
    background: navbar-color-bg
    color: navbar-color-fg
    li.active, li.active > a
      background: navbar-color-bg-active

  #drawer, #drawer footer
    color: drawer-color-fg
    background-color: drawer-color-bg
    .btn-popup
      color: drawer-color-fg
      border-color: drawer-color-fg
    ul, ul li
      background-color: drawer-color-bg
    .token
      font-weight: normal
      &.token-label, &.token-relationship-type
        background-color: swatch-b-background-color
        color: swatch-b-text-color
      &.token-property-key
        background-color: inherit
        color: swatch-b-text-color
        border-color: swatch-b-background-color

  // CodeMirror overrides
  .CodeMirror
    z-index: 2
    &.cm-s-neo, &.cm-s-css
      color: red
      .cm-comment
        color: #C0C4CA
      .cm-keyword, .cm-property
        color: #3498DB
      .cm-atom, .cm-number
        color: #9B59B6
      .cm-node, .cm-tag
        color: #E74C3C
      .cm-string
        color: #E67E22
      .cm-variable, .cm-qualifier
        color: #1ABC9C
  #editor
    ul.controls
      a.circled
        color: #858585
        &.active
          color: #cecece
          &.play
            &:hover
              color: #cecece
          &.favorites
            &.enabled, &.enabled:hover
              color: color-favorites
            &.changed
              color: color-favorites
            &:hover
              color: #cecece
          &.delete
            &:hover
              color: #cecece
    .CodeMirror
      background-color: editor-background-color
      pre
        background-color: editor-background-color
        z-index: -1
      .CodeMirror-placeholder
        color: #E0E2E6
      .CodeMirror-lines
      .CodeMirror-gutters
      .CodeMirror-linenumber
        color: editor-text-color
      .CodeMirror-code
        color: editor-text-color
      div.CodeMirror-cursor
        border-left: 11px solid yellow
        opacity: 0.5
    .prompt
      color: editor-text-color
    .disable-highlighting
      .CodeMirror .CodeMirror-code *
        color: editor-text-color
  div.CodeMirror-selected
    background-color: editor-text-color
    opacity: 0.5
