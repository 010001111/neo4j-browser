.admin
  a
    font-size: 26px
    line-height: 1em
  table
    .span-all
      colspan: 100%
    tr, td
      height: 30px
      border: 1px solid #ddd
      border-top: 0

  .select
    display: inline-block

    select
      box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.1)
      background: transparent
    .select-actions
      display: inline-block
      a
        margin: 0
        padding: 1px 5px 0 0

  .token
    background: #f5f5f5
    border: 1px solid #ddd
    a
      padding: 0 0 0 4px
      font-size: 13px
  .add-new-user
    .panel-heading
      a
        vertical-align: text-top
        margin-left: 12px

    .table
      margin-bottom: 0